{
  "name": "design-tokens-sync",
  "version": "1.0.0",
  "description": "Automated design token syncing between Figma Token Studio and your codebase with built-in analytics",
  "keywords": [
    "design-tokens",
    "design-system",
    "figma",
    "token-studio",
    "css-variables",
    "tailwind",
    "automation",
    "ci-cd",
    "analytics"
  ],
  "homepage": "https://github.com/sixi3/figma-code-sync",
  "bugs": {
    "url": "https://github.com/sixi3/figma-code-sync/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sixi3/figma-code-sync.git"
  },
  "license": "MIT",
  "author": {
    "name": "sixi3",
    "url": "https://github.com/sixi3"
  },
  "main": "src/index.js",
  "bin": {
    "design-tokens-sync": "./bin/design-tokens-sync.js",
    "dts": "./bin/design-tokens-sync.js"
  },
  "files": [
    "bin/",
    "src/",
    "templates/"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:package": "eslint src test --ext .js,.ts",
    "lint:fix": "eslint src test --ext .js,.ts --fix",
    "build:package": "npm run lint:package && npm test",
    "prepublishOnly": "npm run build:package",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "tokens:sync": "node bin/design-tokens-sync.js sync",
    "tokens:watch": "node bin/design-tokens-sync.js watch",
    "tokens:analytics": "node bin/design-tokens-sync.js analytics report"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "chokidar": "^3.6.0",
    "commander": "^11.0.0",
    "cosmiconfig": "^8.3.6",
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "inquirer": "^9.3.7",
    "joi": "^17.13.3",
    "ora": "^7.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.28.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest": "^29.6.0",
    "postcss": "^8.4.38",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  }
}
